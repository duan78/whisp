# Configuration de l'environnement pour Whisp Assistant
# Copiez ce fichier en .env et configurez vos valeurs

# === ENVIRONNEMENT ===
# Valeurs possibles: development, production, test
WHISP_ENV=development

# === CLÉS API ===
# OpenAI API (pour Whisper)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Mistral API (pour l'analyse et la traduction)
MISTRAL_API_KEY=your-mistral-api-key-here

# === CONFIGURATION STT ===
# Moteur de reconnaissance vocale par défaut
# Valeurs possibles: speechrecognition, nemo, whisper, vosk, whisper_ct2
STT_ENGINE=speechrecognition

# Configuration Whisper
WHISPER_MODEL=base
WHISPER_LANGUAGE=fr
WHISPER_COMPUTE_TYPE=float16

# === CONFIGURATION TTS ===
# Moteur de synthèse vocale par défaut
# Valeurs possibles: pyttsx3, gtts, coqui, piper
TTS_ENGINE=gtts

# Configuration CoquiTTS
COQUI_MODEL_NAME=tts_models/fr/mai/tacotron2-DDC

# === INTERFACE WEB ===
# Port du serveur web
WEB_PORT=5000

# Hôte du serveur web (0.0.0.0 pour toutes les interfaces, 127.0.0.1 pour local seulement)
WEB_HOST=127.0.0.1

# Activer le mode debug Flask (uniquement en développement!)
FLASK_DEBUG=False

# === SÉCURITÉ ===
# Clé secrète pour les sessions Flask (générez une clé aléatoire!)
SECRET_KEY=your-secret-key-here-change-this

# Activer l'authentification pour l'interface web
WEB_AUTH_ENABLED=False

# Nom d'utilisateur et mot de passe pour l'interface web (si auth activée)
WEB_USERNAME=admin
WEB_PASSWORD=changeme

# === LOGGING ===
# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Répertoire des logs
LOG_DIR=~/.whisp/logs

# Taille maximale d'un fichier de log (en MB)
LOG_MAX_SIZE=10

# Nombre de fichiers de log à conserver
LOG_BACKUP_COUNT=5

# === PERFORMANCES ===
# Nombre de threads pour le traitement des commandes
COMMAND_THREADS=4

# Timeout pour les commandes (en secondes)
COMMAND_TIMEOUT=30

# Taille du cache TTS (nombre d'entrées)
TTS_CACHE_SIZE=100

# === CHEMINS ===
# Répertoire de données
DATA_DIR=~/.whisp/data

# Répertoire de cache
CACHE_DIR=~/.whisp/cache

# Répertoire de backups
BACKUP_DIR=~/.whisp/backups

# === DÉVELOPPEMENT ===
# Activer le rechargement automatique des modules
AUTO_RELOAD=False

# Activer le mode verbose
VERBOSE=False

# Activer les métriques de performance
ENABLE_METRICS=True